{
  "name": "task-one",
  "version": "0.1.0",
  "description": "Simple style compilation",
  "main": "index.js",
  "author": "David Clark",
  "license": "MIT",
  "dependencies": {
    "autoprefixer-core": "^5.1.11",
    "browser-sync": "^2.7.1",
    "chalk": "^1.0.0",
    "clean-css": "^3.2.9",
    "del": "^1.1.1",
    "grunt": "^0.4.5",
    "grunt-browser-sync": "^2.1.3",
    "grunt-contrib-clean": "^0.6.0",
    "grunt-contrib-cssmin": "^0.12.3",
    "grunt-contrib-watch": "^0.6.1",
    "grunt-postcss": "^0.4.0",
    "grunt-sass": "^1.0.0",
    "gulp": "^3.8.11",
    "gulp-minify-css": "^1.1.1",
    "gulp-postcss": "^5.1.6",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^2.0.1",
    "node-sass": "^3.1.0",
    "parallelshell": "^1.1.1",
    "postcss": "^4.1.10",
    "queue-async": "^1.0.7",
    "rimraf": "^2.3.3",
    "watch": "^0.16.0"
  },
  "scripts": {
    "sass": "node-sass src/scss/main.scss dist/css/compiled.css",
    "prefix": "autoprefixer dist/css/compiled.css --browsers \"last 2 version\" --no-map -o dist/css/compiled-prefixed.css",
    "minify": "cleancss dist/css/compiled-prefixed.css -o dist/css/compiled-prefixed-minified.css",
    "clean": "rimraf dist/css/*.*",
    "prestyle:io": "npm run clean",
    "style:io": "npm run sass && npm run prefix && npm run minify",
    "prestyle:stream": "npm run clean",
    "style:stream": "node-sass src/scss/main.scss | autoprefixer --browsers \"last 2 version\" -o - | cleancss > dist/css/compiled-prefixed-minified.css",
    "watch": "watch \"npm run style:stream\" src/scss",
    "bs": "browser-sync start --files \"dist/**/*\" --server",
    "dev": "parallelshell \"npm run bs\" \"npm run watch\""
  }
}
